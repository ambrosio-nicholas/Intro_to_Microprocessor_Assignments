' {$STAMP BS2}
' {$PBASIC 2.5}
counter VAR Word
PAUSE 1000

DO
  DEBUG "Pulse width increment by 5", CR
  FOR counter = 500 TO 1000 STEP 5
    PULSOUT 14, counter
    PAUSE 8
    DEBUG DEC5 counter, CR, CRSRUP
  NEXT

  DEBUG CR, "Pulse width decrement by 10", CR

  FOR counter = 1000 TO 500 STEP 10
    PULSOUT 14, counter
    PAUSE 6
    DEBUG DEC5 counter, CR, CRSRUP
  NEXT

  DEBUG CR, "Repeat", CR
LOOP